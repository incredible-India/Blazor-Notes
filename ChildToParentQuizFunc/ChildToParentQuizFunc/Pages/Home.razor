@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your Quiz app.

@for (int i = 0; i < Questions.Count; i++)
{
    <QuizCompoents 
        Question="@Questions[i]" 
        OptionA="@OptionA[i]" 
        OptionB="@OptionB[i]"
        ForA="CorrectAnswer"
        ForB="IncorrectAnswer"
        VerifyTheAnswer="verifytheAnwser"/>
}

<p>@AnswerStatus</p>

@code {
    private List<string> Questions = new() 
    { 
        "The C# is ________ Language", 
        "Html is _______ language", 
        "The js is a  _________ scripting language" 
    };

    public List<string> OptionA = new() 
    { 
        "Mark-up", 
        "Mark up", 
        "scripting" 
    };

    public List<string> OptionB = new() 
    { 
        "programming", 
        "programming", 
        "non-scripting" 
    };

    public string AnswerStatus { get; set; } = string.Empty;

    public void CorrectAnswer()
    {
        AnswerStatus = "Answer is Correct";
    }

    public void IncorrectAnswer()
    {
        AnswerStatus = "Answer is Incorrect";
    }

    public void verifytheAnwser(string name)
    {
        AnswerStatus = name;
    }
}